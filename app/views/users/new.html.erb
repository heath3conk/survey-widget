<div class="container general-form">
  <%= form_for :user, url: users_path(@user) do |f| %>
    <% if flash[:error] %>
      <div class="error-explanation">
        <% flash[:error].each do |error| %>
          <p class="error"><%= "#{error[0]} #{error[1][0]}" %></p>
        <% end %>
      </div>
    <% end %>

    <div class="user-action">
      <%= f.label :first_name, "First Name", class: "form-label" %><br>
      <%= f.text_field :first_name %><br>

      <%= f.label :last_name, "Last Name", class: "form-label" %><br>
      <%= f.text_field :last_name %>

      <%= f.label :password, "Password", class: "form-label" %><br>
      <%= f.password_field :password %>

      <%= f.label :email, "Email", class: "form-label" %><br>
      <%= f.text_field :email %>

      <%= f.label :role, "Secret Key", class: "form-label" %><br>
      <%= f.text_field :role %>

      <div class="actions waves-effect waves-light btn-large extra-large-button">
        <%= f.submit "register as new user" %>
      </div>
    </div>

  <% end %>
</div>